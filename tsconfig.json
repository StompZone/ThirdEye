{
    "compileOnSave": false,
    "compilerOptions": {
        "typeRoots": [
            "node_modules/@discordjs",
            // "bedrock-protocol",
            "src/types"
        ],
        "lib": [
            "ESNext"
        ],
        "target": "ESNext",
        "module": "ESNext",
        "sourceMap": false,
        "moduleResolution": "Node",
        "outDir": ".build",
        "removeComments": false,
        "allowJs": true,
        "checkJs": false,
        "useDefineForClassFields": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}